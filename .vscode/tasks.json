{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run clang-tidy",
      "type": "shell",
      "command": "python run-clang-tidy.py -fix -p \"build\" -j 12 -filter build -filter bin -filter tests",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run include-what-you-use",
      "type": "shell",
      "command": "python iwyu_tool.py -p .",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build tests",
      "type": "cmake",
      "command": "build",
      "group": "build"
    },
    {
      "label": "Clean project",
      "type": "shell",
      "command": "rm -rf build bin .cache",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}
