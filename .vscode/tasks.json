{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run clang-tidy",
            "type": "shell",
            "command": "python run-clang-tidy.py -p \"build\" -j 12 -filter build -filter bin -filter deps -filter .rc -fix",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
